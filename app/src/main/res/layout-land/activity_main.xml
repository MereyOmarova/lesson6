<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_zapis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="0"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tv_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ED9A1E"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="0"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOshiru"
            style="@style/button_func_style_land"
            android:layout_weight="1"
            android:text="C"
            android:textColor="#EA9519"
            android:textColorHighlight="#E39420"
            android:textColorLink="#000000" />

        <Button
            android:id="@+id/btnPlusMinus"
            style="@style/button_func_style_land"
            android:text="+/-"
            android:textColor="#E89821" />

        <Button
            android:id="@+id/BtnOut"
            style="@style/button_func_style_land"
            android:text="%"
            android:textColor="#EC9A23"/>

        <Button
            android:id="@+id/btnBolu"
            style="@style/button_func_style_land"
            android:text="/"
            android:textColor="#EA9921" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            style="@style/button_number_style_land"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/button_number_style_land"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/button_number_style_land"
            android:text="9"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnX"
            style="@style/button_func_style_land"
            android:text="X"
            android:textColor="#E89821"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/button_number_style_land"
            android:text="4"/>

        <Button
            android:id="@+id/btn5"
            style="@style/button_number_style_land"
            android:text="5"/>

        <Button
            android:id="@+id/btn6"
            style="@style/button_number_style_land"
            android:text="6" />

        <Button
            android:id="@+id/btnMinus"
            style="@style/button_func_style_land"
            android:text="-"
            android:textColor="#F39B1A" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/button_number_style_land"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/button_number_style_land"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/button_number_style_land"
            android:text="3" />

        <Button
            android:id="@+id/btnPlus"
            style="@style/button_func_style_land"
            android:text="+"
            android:textColor="#ED9718" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            style="@style/button_number_style_land"
            android:text="0" />

        <Button
            android:id="@+id/btnNukte"
            style="@style/button_number_style_land"
            android:text="."
            android:textColor="#EC981D" />

        <Button
            android:id="@+id/btnTen"
            style="@style/button_func_style_land"
            android:layout_weight="3.7"
            android:text="="
            android:textColor="#EF9819" />



    </LinearLayout>

</LinearLayout>